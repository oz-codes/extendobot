#!/usr/bin/env ruby

require 'cinch'
require 'emoji'
require 'emoji/string_ext'
require_relative './classes/Util'

utils = Util::Util.new;
bots = Util::BotFamily.instance
servers = utils.getServers()
servers.each { |serv| 
  if serv['autoconnect']
    bots.add( {
      "host" => serv['host'],
      "name" => serv['name']
    }
            ) 
    puts "autoconnect to #{serv['name']}"
  else 
    puts "ignoring #{serv['name']}"
  end
}	
bots.startAll
utils.MainLoop
